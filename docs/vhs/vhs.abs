f run_tape(t) {
    echo("running tape %s", tape)
    res = `vhs /abs/docs/vhs/tapes/$tape`

    if !res.ok {
        exit(99, res)
    }

    echo(res)   
}

t = env("TAPE") 

if t {
    run_tape(t)
    return
}

for tape in `ls /abs/docs/vhs/tapes`.lines() {
    if tape == "config.tape" {
        continue
    }
    
    run_tape(tape)
}